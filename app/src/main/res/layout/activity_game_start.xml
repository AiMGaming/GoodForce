<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.danielburgnerjr.goodforce.GameStartActivity">

    <TextView
        android:id="@+id/txtDailyPrize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textSize="24dp"
        android:text="Daily Prize: $1.00" />

    <TextView
        android:id="@+id/txtPlayerId"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDailyPrize"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Welcome Player, #1"
        android:textAlignment="center"
        android:textSize="18dp" />

    <Button
        android:id="@+id/btnPlay"
        android:layout_width="142dp"
        android:layout_height="141dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="135dp"
        android:text="Free Play"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="399dp" />

    <TextView
        android:id="@+id/txtProgressVsGoal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="168dp"
        android:text="Progress:  $0, Goal: $15,000"
        android:textAlignment="center"
        android:textSize="18dp" />

    <Button
        android:id="@+id/btnWatchVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="101dp"
        android:layout_marginEnd="11dp"
        android:text="Watch Video"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="399dp" />

    <Button
        android:id="@+id/btnGameRules"
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnWatchVideo"
        android:layout_marginTop="-101dp"
        android:layout_toStartOf="@+id/btnExtraLives"
        android:text="Game Rules"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="399dp" />

    <Button
        android:id="@+id/btnExtraLives"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnWatchVideo"
        android:layout_centerHorizontal="true"
        android:text="Extra Lives: 2" />

    <Button
        android:id="@+id/btnGoodForceCoins"
        android:layout_width="113dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnWatchVideo"
        android:layout_toStartOf="@+id/btnExtraLives"
        android:text="Coins: 2" />

    <Button
        android:id="@+id/btnInvite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnGameRules"
        android:layout_centerHorizontal="true"
        android:text="Tell A Friend" />

    <Button
        android:id="@+id/btnGFPoints"
        android:layout_width="111dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnWatchVideo"
        android:layout_alignTop="@+id/btnGameRules"
        android:text="Points: 100" />

</android.widget.RelativeLayout>